<% layout('layout/boilerplate')%>
<div id="map" style="width: 100%; height: 500px"></div>

<div>
    <a class="btn btn-danger mb-3 mt-3" href="/courts/new">Add New Court</a>
</div>

<h1>All courts</h1>

<% for (let court of courts){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(court.images.length) {%>
            <img class="img-fluid" alt="" src="<%=court.images[0].url%>">
            <% }else {%>
            <img class="img-fluid" alt=""
                src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= court.title %> </h5>
                <p class="card-text"><%= court.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= court.location%></small>
                </p>
                <a class="btn btn-primary" href="/courts/<%=court._id%>">View <%=court.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

<script>
    const courts = {features: <%- JSON.stringify(courts) %>}
</script>

<script src="/javascript/clusterMap.js"></script>